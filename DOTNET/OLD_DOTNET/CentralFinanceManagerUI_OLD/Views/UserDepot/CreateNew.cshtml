@model CentralFinanceManagerUI.Models.UserDepots.UserDepot

@{
    ViewData["Title"] = "CreateNew";

    <script type="text/javascript" src="~/js/site.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}

<h1 class="text-center">Choose your Depot Model</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="UserDepot" asp-action="CreateNew" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepotName" class="control-label"></label>
                <input asp-for="DepotName" class="form-control" />
                <span asp-validation-for="DepotName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateNew" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to my Depots</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
